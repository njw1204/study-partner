<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/imageview_study_icon_item"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textview_kind_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageview_study_icon_item"
                android:singleLine="true"
                android:text="IT, 컴퓨터"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textview_school_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textview_people_cnt_item"
                android:layout_toRightOf="@+id/textview_kind_item"
                android:singleLine="true"
                android:text="/중앙대학교"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textview_study_title_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_kind_item"
                android:layout_centerVertical="false"
                android:layout_toLeftOf="@+id/textview_people_cnt_item"
                android:layout_toRightOf="@+id/imageview_study_icon_item"
                android:paddingTop="4dp"
                android:singleLine="true"
                android:text="중앙대학교 알고리즘 스터디"
                android:textColor="@color/m_grey_900"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textview_people_cnt_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="128명"
                android:textColor="@color/colorAccent"
                android:textSize="14dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
